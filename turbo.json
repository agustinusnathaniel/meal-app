{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "type:check": {
      "inputs": ["tsconfig.json", "src/**"],
      "outputs": ["*.tsbuildinfo"],
      "env": ["VITE_API_BASE_URL", "VITE_API_KEY", "VITE_UMAMI_SCRIPT_URL", "VITE_UMAMI_WEBSITE_ID"]
    },
    "biome:check": {
      "outputs": [],
      "inputs": ["biome.json", "src/**"]
    },
    "biome:ci": {
      "outputs": [],
      "inputs": ["biome.json", "src/**"]
    },
    "build": {
      "dependsOn": ["type:check"],
      "outputs": ["dist/**", "public/**"],
      "env": ["VITE_API_BASE_URL", "VITE_API_KEY", "VITE_UMAMI_SCRIPT_URL", "VITE_UMAMI_WEBSITE_ID"]
    },
		"test": {
      "outputs": ["node_modules/.vite/**/results.json"],
      "inputs": ["vitest.config.ts", "src/**"]
    }
  }
}
